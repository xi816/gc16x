#!/usr/bin/bash
print_state() {
  printf "building \e[93m$1\e[0m\n"
}
completed_state() {
  printf "Compilation finished\n"
}
build_state() {
  print_state $1
  cd $2
  ./build
  cd - > /dev/null
}

build_state "gc16"        "./"
build_state "gasman"      "core/gasman/"
build_state "gboot"       "core/gboot/"
build_state "ugovnfs"     "core/ugovnfs/"
build_state "GovnOS"      "govnos/"
echo
completed_state

